<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hungjoker.timer">

    <uses-permission android:name="android.permission.VIBRATE"/>
    <meta-data android:name="google_analytics_adid_collection_enabled" android:value="false" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="@string/app_name"
        android:icon="@mipmap/ic_app_cardio_timer"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_cardio_timer_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:replace="android:appComponentFactory">
        <activity android:name=".view.HomeTimerActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.CountdownActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.IntroActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>