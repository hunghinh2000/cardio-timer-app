<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="266dp"
    android:layout_height="320dp"
    android:layout_gravity="center"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btnCloseDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/close_dialog_icon" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@drawable/congratulation_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/fs_harabara"
        android:gravity="center"
        android:text="Cardio completed!"
        android:textColor="@color/coutdownBackgroundColor"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/txtTotalWorkTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:fontFamily="@font/fs_harabara"
        android:gravity="center"
        android:text="Total working time: "
        android:textColor="@color/coutdownBackgroundColor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtTotalRestTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/fs_harabara"
        android:gravity="center"
        android:text="Total resting time: "
        android:textColor="@color/coutdownBackgroundColor"
        android:textSize="18sp" />


</LinearLayout>